<p style="color: green"><%= notice %></p>

<%= render @inventori %>

<div>
  <%= link_to "Edit this inventori", edit_inventori_path(@inventori) , class: "btn btn-info"%> |
  <%= link_to "Back to inventoris", inventoris_path , class: "btn btn-primary"%>
</div>

<h1><%= @inventori.name %></h1>
<%= link_to 'Add food', "/inventory_foods/#{@inventori.id}/new", class: 'btn btn-primary'%>

<div>
    <table class="table table-striped table-bordered w-100 mt-4">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Quantity</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% if @foods.count == 0%>
      <tr class="alert alert-warning">
        <td colspan="3" class="text-center">No foods in this inventory</td>
      </tr>      
    <% else %>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.food.name %></td>
          <td><%= food.quantity %></td>
          <td><%= button_to 'Delete', "/inventory_foods/#{@inventori.id}/destroy/#{food.id}", method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>