<div class="d-flex flex-column align-items-center justify-content-center p-5">
    <h1><%= @recipe.name %></h1>
    <div class="showContainer">
    <div>
        <p>Preparation Time : <%= @recipe.preparation_time %></p>
        <p>Coocking time : <%= @recipe.cooking_time %></p>
    </div>

    <div>
        <p>Public: <%= @recipe.public %></p>
        <%= link_to 'Add new food', "/recipe_foods/#{@recipe.id}/new", class: 'btn btn-primary'%>
    </div>
</div>

<div>
    <table class="table table-striped table-bordered w-100 mt-4 w-100">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Quantity</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.food.name %></td>
          <td><%= food.quantity %></td>
          <td><%= button_to 'Delete', "/recipe_foods/#{@recipe.id}/destroy/#{food.id}", method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "All recipes", recipes_path, class: "btn btn-primary" %>

</div>